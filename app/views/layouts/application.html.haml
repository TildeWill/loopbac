!!!
%html
  %head
    %title Loopback
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header
      = link_to("Loopb.ac", root_path)
      - if user_logged_in?
      - else
        = link_to("Sign In", employees_path)
    - if notice
      %p.notice= notice
    - if alert
      %p.alert= alert
    = yield