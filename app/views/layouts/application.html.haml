!!!
%html{:lang => "en"}
  %head
    %title Loopb.ac
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link{:href => "/assets/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
    %link{:href => "/assets/favicon.ico", :rel => "icon", :type => "image/x-icon"}
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }

      @media (max-width: 980px) {
        /* Enable use of floated navbar text */
        .navbar-text.pull-right {
          float: none;
          padding-left: 5px;
          padding-right: 5px;
        }
      }
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to(image_tag("loopbac_logo_50.png"), root_path, class: "brand")
          .nav-collapse.collapse
            %p.navbar-text.pull-right
              - if user_signed_in?
                %span.dropdown
                  %a.navbar-link{href: "#"}
                    = image_tag(current_user.image_url, class: 'profile-icon')

                  = link_to('Sign out', signout_path)
            %ul.nav
              %li.dropdown.loops-nav
                = link_to("#", :class => "dropdown-toggle", "data-toggle" => "dropdown") do
                  Loops
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to("Action Required", "#")
                  %li= link_to("Given", "#")
                  %li= link_to("Received", "#")
                  %li= link_to("Create New", "#")
              %li.dropdown.goals-nav
                = link_to("#", :class => "dropdown-toggle", "data-toggle" => "dropdown") do
                  Goals
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to("Current", "#")
                  %li= link_to("Completed", "#")
              %li.dropdown.notes-nav
                = link_to("#", :class => "dropdown-toggle", "data-toggle" => "dropdown") do
                  Notes
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to("Private Notes About Me", notes_path(about: 'me'))
                  %li= link_to("Private Notes About Others", notes_path(about: 'others'))
                  %li= link_to("Create New", new_note_path)

              %li.dropdown.tasks-nav
                = link_to("#", :class => "dropdown-toggle", "data-toggle" => "dropdown") do
                  Tasks
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to("Assigned to Me", "#")
                  %li= link_to("Assigned to Others", "#")
                  %li= link_to("Create New", "#")
              %li.coach-nav= link_to("My Coach", "#")
              %li.dropdown.reports-nav
                = link_to("#", :class => "dropdown-toggle", "data-toggle" => "dropdown") do
                  My Reports
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to("Aaron VonderHaar", "#")
                  %li= link_to("Max Brunsfeld", "#")
                  %li= link_to("Ryan Spore", "#")

    .container-fluid
      .row-fluid
        .span12
          - [:notice, :alert].each do |level|
            - unless flash[level].blank?
              .alert{class: flash_class(level)}
                %button.close{"data-dismiss" => "alert", :type => "button"} Ã—
                = flash[level]
          = yield
