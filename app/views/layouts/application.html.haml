!!!
%html
  %head
    %title Loopback
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar
      .navbar-inner
        .container
          = link_to("Loopb.ac", root_path, class: 'brand')
          .pull-right
            - if user_signed_in?
              %span.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  = image_tag(current_user.image_url, width: 30, height: 30)
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to("Sign out", destroy_user_session_path)
            - else
              = link_to("Sign In", user_omniauth_authorize_path(:google_oauth2))
    - if notice
      %p.notice= notice
    - if alert
      %p.alert= alert
    = yield